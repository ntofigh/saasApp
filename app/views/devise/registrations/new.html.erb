<div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
  <% if params[:plan]== '2' %>
    <h1 class="text-center">Pro Account</h1>
    <p> Sign up for a Pro account for $10/month to get direct access to donors and receive verified access in the community. </p>
  <% else %>
    <h1 class="text-center">Basic Account</h1>
    <p> Sign up for free and get basic access to the community. </p>

  <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>  
      <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
      <%= render "devise/shared/links" %>
      </div>
  </div>
</div>